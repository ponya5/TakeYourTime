{
  "enabled": true,
  "name": "Quality Check on Completion",
  "description": "Automatically runs linting and quality checks when the agent finishes responding, scoped to TypeScript files in the src directory",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "runCommand",
    "command": "npm run lint"
  }
}